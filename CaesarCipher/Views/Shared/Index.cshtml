@model CaesarCipher.Models.Cipher
@{
    ViewData["Title"] = "The Caesar Cipher";
}

<div class="row">
    <h1>Caesar Cipher Web Application</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <p>The Caesar Cipher is a simple encryption technique that encrypts by shifting characters down the alphabet.</p>
        <ul>
            <li>To Encrypt:<br />Enter the text you would like to encrypt into the "Text" field, and the amount of characters you would like to shift by into the "Key" field, and select "ENCRYPT".</li>
            <li>To Decrypt:<br />Enter the text you would like to decrypt into the "Text" field, and the amount of characters the text was shifted by into the "Key" field, and select "DECRYPT".</li>
        </ul>
    </div>
    <div class="col-md-8">
        @using (Html.BeginForm("Index", "Cipher", FormMethod.Post))
        {
            <label for="txt">Text:</label>
            <input type="text" id="txt" name="txt" maxlength="500" required="required" class="box inputtext"><br><br>
            <label for="shift">Key:</label>
            <select name="shift" id="shift" class="box">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
                <option value="11">11</option>
                <option value="12">12</option>
                <option value="13">13</option>
                <option value="14">14</option>
                <option value="15">15</option>
                <option value="16">16</option>
                <option value="17">17</option>
                <option value="18">18</option>
                <option value="19">19</option>
                <option value="20">20</option>
                <option value="21">21</option>
                <option value="22">22</option>
                <option value="23">23</option>
                <option value="24">24</option>
                <option value="25">25</option>
                <option value="26">26</option>
            </select>
            <input type="submit" name="encrypt" value="Encrypt" class="button">
            <input type="submit" name="encrypt" value="Decrypt" class="button">
        }
            <div class="row">
                <br /><h3>Results:</h3>
                <textarea id="results" name="results" rows="5" cols="100" class="box" readonly="readonly">@Model.Results</textarea>
            </div>
        </div>

</div>
